<% layout("_layout") %>


<div class="container pt-big pb-4 w-100 min-h-100">
  <div class="row">
    <div class="col-12 col-md-6 offset-md-3">
      <form action="/wallpapers" enctype="multipart/form-data" method="POST" id="form">
        <div class="mb-3">
          <label for="description" class="form-label">Description for wallpaper</label>
          <input name="wallpaper[description]" type="text" class="form-control" id="description" required placeholder="input description for wallpaper ...">
        </div>
        <div class="mb-3">
          <label for="img" class="form-label">Current Wallpaper</label>
          <div class="d-flex justify-content-center bg-light p-1">
            <img src="/images/no-image.png" class="img-small" alt="" id="img" data-src="/images/no-image.png">
          </div>
        </div>
        <div class="mb-3">
          <label for="file" class="form-label">Upload wallpaper</label>
          <input name="file" type="file" class="form-control" id="file" required>
        </div>
        <div class="mb-3">
          <label for="device" class="form-label">Choose for which device the wallpaper is</label>
          <select name="wallpaper[device]" class="form-select" aria-label="Default select example" id="device">
            <option selected value="" disabled>Open this select menu</option>
            <option value="phone">Mobile Phones</option>
            <option value="tablet">Tablets</option>
            <option value="desktop">Desktop</option>
            <option value="desktop-wide">Wide screens/two monitors</option>
          </select>
        </div>
        <div class="hstack gap-1">
          <button type="submit" class="btn btn-success w-100">
            <i class="fa-solid fa-check"></i> Submit
          </button>
          <a type="button" class="btn btn-secondary w-100" href="/wallpapers">
            <i class="fa-solid fa-ban"></i> Cancel
          </a>
        </div>
      </form>
    </div>
  </div>
</div>

<% block('footer').append('<script src="/JS/image.js"></script>') %>
<% block('footer').append('<script src="/JS/form.js"></script>') %>